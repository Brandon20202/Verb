<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-6 is-offset-3">
        <h1 class="title has-text-danger" id="banner" style="font-family: 'Bungee Outline', cursive; font-size: 4rem;">
          Verb-its!
        </h1>
        <hr class="login-hr">
        <p class="subtitle has-text-danger
        ">Please register to proceed.</p>
        <div class="box">
          <form action="/register" method="POST">
            <div class="field">
              <div class="control">
                <input class="input is-large" type="text" name="first_name" placeholder="First Name" autofocus=""
                  style="text-align: center;">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input is-large" type="text" name="last_name" placeholder="Last Name" autofocus=""
                  style="text-align: center;">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input is-large" type="email" name="email" placeholder="Email" autofocus=""
                  style="text-align: center;">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input is-large" type="password" name="password" placeholder="Password"
                  style="text-align: center;">
              </div>
            </div>
            <button type="submit" class="button is-large is-danger has-text-white">Register </button>
          </form>
        </div>
        <p class="has-text-grey">
          <a href="/login">Go Back!</a> 
        </p>
      </div>
    </div>
  </div>
</section>